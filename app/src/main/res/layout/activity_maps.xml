<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tr1984.firebasesample.ui.MapsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navermap_mapType="Basic"
            app:navermap_zoom="6" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@{viewModel.title}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TITLE" />

        <TextView
            android:id="@+id/txt_poi_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.poiMainTitle}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:text="발생지" />

        <TextView
            android:id="@+id/txt_poi_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_poi_main_title"
            tools:text="0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/poi_groups"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_poi_count"
            tools:listitem="@layout/view_item_pois" />

        <TextView
            android:id="@+id/txt_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.lastUpdatedAt}"
            app:layout_constraintBottom_toTopOf="@id/txt_source"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Last Updated : 00.00.00" />

        <TextView
            android:id="@+id/txt_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.dataSource}"
            app:layout_constraintBottom_toTopOf="@id/txt_contact"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="출처 : 000" />

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.contact}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="연락처 : 000@000.com" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>